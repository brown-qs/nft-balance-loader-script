{
  "name": "suberra-solidity-assignment",
  "version": "0.1.0",
  "description": "Suberra Solidity Assignment",
  "scripts": {
    "prepublishOnly": "scripts/prepublish.sh",
    "build": "scripts/build.sh",
    "clean": "rm -rf build/ cache/ dist/",
    "coverage": "scripts/coverage.sh",
    "compile": "hardhat compile && tsc --resolveJsonModule",
    "getinfo": "hardhat run --network rinkeby scripts/info.ts",
    "test": "scripts/test.sh",
    "test:gas": "RUN_EVM=true REPORT_GAS=true scripts/test.sh",
    "test:coverage": "scripts/coverage.sh",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:fix": "npm run lint:ts:fix && npm run lint:sol:fix",
    "lint:ts": "eslint '*/**/*.{js,ts}'",
    "lint:ts:fix": "eslint '*/**/*.{js,ts}' --fix",
    "lint:sol": "solium --dir ./contracts",
    "lint:sol:fix": "solium --dir ./contracts --fix",
    "prettier": "npm run prettier:ts && npm run prettier:sol",
    "prettier:ts": "prettier --write 'test/**/*.ts'",
    "prettier:sol": "prettier --write 'contracts/*.sol'",
    "security": "scripts/security.sh",
    "flatten": "scripts/flatten.sh",
    "verify": "hardhat verify"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "author": "Black Storm",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-standard": "^16.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "ethers": "^5.7.1",
    "ethlint": "^1.2.5",
    "hardhat": "^2.9.9",
    "hardhat-abi-exporter": "^2.2.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.56",
    "solidity-coverage": "^0.8.2",
    "truffle-flattener": "^1.4.4",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
    "ethereum-waffle": "^3.4.4"
  }
}
